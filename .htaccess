# .htaccess para Edu Sampaio Cursos - Locaweb
# Configuração para BrowserRouter (React Router) funcionar corretamente
# Todas as rotas serão redirecionadas para index.html

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Não redirecionar se for o próprio index.html
  RewriteRule ^index\.html$ - [L]

  # Não redirecionar se o arquivo existir (JS, CSS, imagens, etc)
  RewriteCond %{REQUEST_FILENAME} !-f
  
  # Não redirecionar se for um diretório
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Não redirecionar se for um link simbólico
  RewriteCond %{REQUEST_FILENAME} !-l

  # Redirecionar tudo para index.html
  RewriteRule . /index.html [L]
</IfModule>

# ========================================
# SEGURANÇA E PERFORMANCE
# ========================================

# Prevenir listagem de diretórios
Options -Indexes

# Compressão GZIP (melhora performance)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache de arquivos estáticos (melhora performance)
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Imagens
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # CSS e JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  
  # Fontes
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  
  # HTML
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Headers de segurança
<IfModule mod_headers.c>
  # X-Frame-Options (previne clickjacking)
  Header set X-Frame-Options "SAMEORIGIN"
  
  # X-Content-Type-Options (previne MIME sniffing)
  Header set X-Content-Type-Options "nosniff"
  
  # X-XSS-Protection
  Header set X-XSS-Protection "1; mode=block"
  
  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

